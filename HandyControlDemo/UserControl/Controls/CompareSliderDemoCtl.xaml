<UserControl x:Class="HandyControlDemo.UserControl.CompareSliderDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
             Background="White">
    <controls:TransitioningContentControl>
        <controls:ScrollViewer>
            <WrapPanel ItemHeight="384" ItemWidth="632">
                <controls:CompareSlider Value="5" Width="600" Height="352">
                    <controls:CompareSlider.TargetContent>
                        <Border>
                            <Border.Background>
                                <ImageBrush ImageSource="/HandyControlDemo;component/Resources/Img/b1.jpg"/>
                            </Border.Background>
                        </Border>
                    </controls:CompareSlider.TargetContent>
                    <controls:CompareSlider.SourceContent>
                        <Border>
                            <Border.Background>
                                <ImageBrush ImageSource="/HandyControlDemo;component/Resources/Img/b2.jpg"/>
                            </Border.Background>
                        </Border>
                    </controls:CompareSlider.SourceContent>
                </controls:CompareSlider>
                <controls:CompareSlider Orientation="Vertical" Value="5" Width="600" Height="352">
                    <controls:CompareSlider.TargetContent>
                        <Border>
                            <Border.Background>
                                <ImageBrush ImageSource="/HandyControlDemo;component/Resources/Img/b1.jpg"/>
                            </Border.Background>
                        </Border>
                    </controls:CompareSlider.TargetContent>
                    <controls:CompareSlider.SourceContent>
                        <Border>
                            <Border.Background>
                                <ImageBrush ImageSource="/HandyControlDemo;component/Resources/Img/b2.jpg"/>
                            </Border.Background>
                        </Border>
                    </controls:CompareSlider.SourceContent>
                </controls:CompareSlider>
            </WrapPanel>
        </controls:ScrollViewer>
    </controls:TransitioningContentControl>
</UserControl>
