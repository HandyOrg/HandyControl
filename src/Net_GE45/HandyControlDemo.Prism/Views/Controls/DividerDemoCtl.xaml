<UserControl x:Class="HandyControlDemo.Views.DividerDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Background="{DynamicResource RegionBrush}"
             xmlns:ex="clr-namespace:HandyControlDemo.Properties.Langs">
    <hc:TransitioningContentControl>
        <WrapPanel Margin="16">
            <StackPanel Margin="16" Width="300">
                <hc:Divider/>
                <hc:Divider Content="{x:Static ex:Lang.Title}"/>
                <hc:Divider Content="{x:Static ex:Lang.Title}" Padding="10,0"/>
                <hc:Divider LineStrokeThickness="2" LineStroke="{DynamicResource DarkPrimaryBrush}"/>
                <hc:Divider LineStrokeDashArray="2,2"/>
            </StackPanel>
            <StackPanel Margin="16" Width="300">
                <hc:Divider Content="{x:Static ex:Lang.Title}" HorizontalContentAlignment="Left"/>
                <hc:Divider Content="{x:Static ex:Lang.Title}" Padding="10,0"  HorizontalContentAlignment="Right"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="{x:Static ex:Lang.Button}"/>
                    <hc:Divider Orientation="Vertical" MaxHeight="16"/>
                    <Button Content="{x:Static ex:Lang.Button}"/>
                    <hc:Divider Orientation="Vertical" MaxHeight="16"/>
                    <Button Content="{x:Static ex:Lang.Button}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                    <Button Content="{x:Static ex:Lang.Button}"/>
                    <hc:Divider LineStrokeThickness="2" Orientation="Vertical" MaxHeight="16"/>
                    <Button Content="{x:Static ex:Lang.Button}"/>
                    <hc:Divider LineStrokeThickness="2" Orientation="Vertical" MaxHeight="16"/>
                    <Button Content="{x:Static ex:Lang.Button}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                    <Button Content="{x:Static ex:Lang.Button}"/>
                    <hc:Divider LineStrokeThickness="2" LineStroke="{DynamicResource DarkPrimaryBrush}" Orientation="Vertical" MaxHeight="16"/>
                    <Button Content="{x:Static ex:Lang.Button}"/>
                    <hc:Divider LineStrokeThickness="2" LineStroke="{DynamicResource DarkPrimaryBrush}" Orientation="Vertical" MaxHeight="16"/>
                    <Button Content="{x:Static ex:Lang.Button}"/>
                </StackPanel>
            </StackPanel>
        </WrapPanel>
    </hc:TransitioningContentControl>
</UserControl>
