<UserControl x:Class="HandyControlDemo.Views.ImageBrowserDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource RegionBrush}"
             xmlns:ex="clr-namespace:HandyControlDemo.Properties.Langs"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:hc="https://handyorg.github.io/handycontrol">
    <hc:TransitioningContentControl>
        <StackPanel Margin="32">
            <hc:ImageViewer Background="{DynamicResource SecondaryRegionBrush}" Width="600" Height="330" ImageSource="/HandyControlDemo;component/Resources/Img/1.jpg"/>
            <Button Margin="0,32,0,0" Command="{Binding OpenImgCmd}" Content="{x:Static ex:Lang.OpenImageBrowser}" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Center"/>
        </StackPanel>
    </hc:TransitioningContentControl>
</UserControl>
