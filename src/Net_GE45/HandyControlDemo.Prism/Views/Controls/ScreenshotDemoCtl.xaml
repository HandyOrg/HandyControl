<UserControl x:Class="HandyControlDemo.Views.ScreenshotDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:ex="clr-namespace:HandyControlDemo.Properties.Langs"
             Background="{DynamicResource RegionBrush}">
    <hc:TransitioningContentControl>
        <Button Content="{x:Static ex:Lang.StartScreenshot}" Command="hc:ControlCommands.StartScreenshot"/>
    </hc:TransitioningContentControl>
</UserControl>
