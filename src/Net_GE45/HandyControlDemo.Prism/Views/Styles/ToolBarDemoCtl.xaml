<UserControl x:Class="HandyControlDemo.Views.ToolBarDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:ex="clr-namespace:HandyControlDemo.Properties.Langs"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="{DynamicResource RegionBrush}">
    <hc:TransitioningContentControl>
        <StackPanel Margin="32">
            <ToolBarTray VerticalAlignment="Center">
                <ToolBar Padding="6" Header="{x:Static ex:Lang.Title}">
                    <CheckBox IsChecked="True" Margin="10,0,0,0"/>
                    <Separator Margin="10,0,0,0"/>
                    <RadioButton Margin="10,0,0,0"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton IsChecked="True" Margin="10,0,0,0"/>
                        <RadioButton Margin="10,0,0,0"/>
                    </StackPanel>
                    <Button Content="{x:Static ex:Lang.Button}" Margin="10,0,0,0"/>
                    <Button Content="{x:Static ex:Lang.Button}" Margin="10,0,0,0" Style="{StaticResource ButtonPrimary}"/>
                </ToolBar>
                <ToolBar Band="1" Padding="6">
                    <ComboBox Margin="10,0,0,0" ItemsSource="{Binding DataList}" SelectedIndex="0" Width="230"/>
                    <TextBox Text="{Binding Source={x:Static ex:Lang.Text},Converter={StaticResource StringRepeatConverter},ConverterParameter=4,Mode=OneWay}" Margin="10,0,0,0" Width="230"/>
                </ToolBar>
                <ToolBar Band="0" Padding="6">
                    <Menu Background="Transparent" VerticalAlignment="Center">
                        <MenuItem Header="{x:Static ex:Lang.Repository}">
                            <MenuItem Header="GitHub">
                                <MenuItem.Icon>
                                    <Path Data="{StaticResource GithubGeometry}" Fill="{DynamicResource PrimaryTextBrush}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="NuGet">
                                <MenuItem.Icon>
                                    <Path Data="{StaticResource NugetGeometry}" Fill="#224880"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="{x:Static ex:Lang.About}">
                            <MenuItem Header="{x:Static ex:Lang.Email}">
                                <MenuItem.Icon>
                                    <Path Data="{StaticResource EmailGeometry}" Fill="{DynamicResource PrimaryBrush}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="{x:Static ex:Lang.Chatroom}">
                                <MenuItem.Icon>
                                    <Path Data="{StaticResource GitterGeometry}" Fill="#e52e64"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="{x:Static ex:Lang.Blog}">
                                <MenuItem.Icon>
                                    <Path Data="{StaticResource CnblogsGeometry}" Fill="{DynamicResource PrimaryTextBrush}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="{x:Static ex:Lang.Contributors}"/>
                    </Menu>
                </ToolBar>
            </ToolBarTray>
            <ToolBarTray Orientation="Vertical" Margin="0,16,0,0">
                <ToolBar Padding="6" Header="{x:Static ex:Lang.Title}">
                    <CheckBox IsChecked="True" Margin="0,10,0,0"/>
                    <Separator Margin="0,10,0,0"/>
                    <RadioButton Margin="0,10,0,0"/>
                    <StackPanel>
                        <RadioButton IsChecked="True" Margin="0,10,0,0"/>
                        <RadioButton Margin="0,10,0,0"/>
                    </StackPanel>
                    <Button Content="{x:Static ex:Lang.Button}" Margin="0,10,0,0"/>
                    <Button Content="{x:Static ex:Lang.Button}" Margin="0,10,0,0" Style="{StaticResource ButtonPrimary}"/>
                </ToolBar>
                <ToolBar Band="1" Padding="6" Header="{x:Static ex:Lang.Title}">
                    <CheckBox IsChecked="True" Margin="0,10,0,0"/>
                    <Separator Margin="0,10,0,0"/>
                    <RadioButton Margin="0,10,0,0"/>
                    <StackPanel>
                        <RadioButton IsChecked="True" Margin="0,10,0,0"/>
                        <RadioButton Margin="0,10,0,0"/>
                    </StackPanel>
                    <Button Content="{x:Static ex:Lang.Button}" Margin="0,10,0,0"/>
                    <Button Content="{x:Static ex:Lang.Button}" Margin="0,10,0,0" Style="{StaticResource ButtonPrimary}"/>
                </ToolBar>
            </ToolBarTray>
        </StackPanel>
    </hc:TransitioningContentControl>
</UserControl>
