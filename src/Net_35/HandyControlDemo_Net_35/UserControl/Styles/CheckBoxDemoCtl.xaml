<UserControl x:Class="HandyControlDemo.UserControl.CheckBoxDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:langs="clr-namespace:HandyControlDemo.Properties.Langs"
             Background="{DynamicResource RegionBrush}"
             Width="400">
    <StackPanel Margin="32" HorizontalAlignment="Center" VerticalAlignment="Center">
        <CheckBox Content="{x:Static langs:Lang.CheckBox}" IsChecked="True"/>
        <CheckBox Margin="0,16,0,0" Content="{x:Static langs:Lang.CheckBox}" IsChecked="True" IsEnabled="False"/>
        <CheckBox Margin="0,16,0,0" Content="{x:Static langs:Lang.CheckBox}"/>
        <CheckBox Margin="0,16,0,0" Content="{x:Static langs:Lang.CheckBox}" IsEnabled="False"/>
        <CheckBox Margin="0,16,0,0" Content="{x:Static langs:Lang.CheckBox}" IsChecked="{x:Null}"/>
        <CheckBox Margin="0,16,0,0" Content="{x:Static langs:Lang.CheckBox}" IsChecked="{x:Null}" IsEnabled="False"/>
    </StackPanel>
</UserControl>
