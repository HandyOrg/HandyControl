            <Button hc:ThemeManager.RequestedTheme="Dark" Click="Button_Click1" Content="Light" Margin="10"/>
            <Button hc:ThemeManager.RequestedTheme="Violet" Click="Button_Click2" Content="Violet" Margin="10"/>
            <Button Content="Default" Margin="10"/>
        </StackPanel>
