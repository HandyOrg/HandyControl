<UserControl x:Class="HandyControlDemo.UserControl.SpriteDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:langs="clr-namespace:HandyControlDemo.Properties.Langs"
             DataContext="{Binding SpriteDemo,Source={StaticResource Locator}}"
             Width="300"
             Background="{DynamicResource RegionBrush}">
    <hc:TransitioningContentControl>
        <Button Margin="32" Command="{Binding OpenCmd}" Content="{x:Static langs:Lang.OpenSprite}"/>
    </hc:TransitioningContentControl>
</UserControl>
