<UserControl x:Class="HandyControlDemo.UserControl.SpriteDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:langs="clr-namespace:HandyControlDemo.Properties.Langs"
             xmlns:ex="clr-namespace:HandyControlDemo.Tools.Extension"
             DataContext="{Binding SpriteDemo,Source={StaticResource Locator}}"
             Width="300"
             Background="{DynamicResource RegionBrush}">
    <hc:TransitioningContentControl>
        <Button Margin="32" Command="{Binding OpenCmd}" Content="{ex:Lang Key={x:Static langs:LangKeys.OpenSprite}}"/>
    </hc:TransitioningContentControl>
</UserControl>
