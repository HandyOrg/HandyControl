<UserControl x:Class="HandyControlDemo.UserControl.ScreenshotDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:langs="clr-namespace:HandyControlDemo.Properties.Langs" hc:DynamicLanguage.ResourceManager="{x:Static langs:Lang.ResourceManager}"
             Background="{DynamicResource RegionBrush}">
    <hc:TransitioningContentControl>
        <Button Content="{hc:Loc StartScreenshot}" Command="hc:ControlCommands.StartScreenshot"/>
    </hc:TransitioningContentControl>
</UserControl>
