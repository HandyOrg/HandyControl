<UserControl x:Class="HandyControlDemo.UserControl.TextBoxDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource RegionBrush}"
             xmlns:langs="clr-namespace:HandyControlDemo.Properties.Langs" hc:DynamicLanguage.ResourceManager="{x:Static langs:Lang.ResourceManager}"
             xmlns:hc="https://handyorg.github.io/handycontrol">
    <hc:TransitioningContentControl>
        <StackPanel Margin="32">
            <hc:TextBox ShowClearButton="True" Text="{hc:Loc ContentDemoStr}"/>
            <hc:TextBox Text="{hc:Loc ContentDemoStr}" Margin="0,16,0,0" IsEnabled="False"/>

            <hc:TextBox ShowClearButton="True" hc:InfoElement.Title="{hc:Loc TitleDemoStr1}" Margin="0,32,0,0" Text="{hc:Loc ContentDemoStr}"/>
            <hc:TextBox TextType="Mail" hc:InfoElement.Placeholder="{hc:Loc PlsEnterEmail}" hc:InfoElement.Title="{hc:Loc TitleDemoStr2}" hc:InfoElement.Necessary="True" Margin="0,16,0,0"/>
            <hc:TextBox Width="380" hc:InfoElement.TitleWidth="140" hc:InfoElement.TitleAlignment="Left" hc:InfoElement.Title="{hc:Loc TitleDemoStr3}" Margin="0,32,0,0" Text="{hc:Loc ContentDemoStr}"/>
            <hc:TextBox ShowClearButton="True" Width="380" hc:InfoElement.TitleWidth="140" hc:InfoElement.Placeholder="{hc:Loc PlsEnterContent}" hc:InfoElement.TitleAlignment="Left" hc:InfoElement.Title="{hc:Loc TitleDemoStr3}" hc:InfoElement.Necessary="True" Margin="0,16,0,0"/>
        </StackPanel>
    </hc:TransitioningContentControl>
</UserControl>
