<UserControl x:Class="HandyControlDemo.UserControl.SimpleStackPanelDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             Background="{DynamicResource RegionBrush}"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:langs="clr-namespace:HandyControlDemo.Properties.Langs"
             xmlns:ex="clr-namespace:HandyControlDemo.Tools.Extension">
    <hc:TransitioningContentControl>
        <hc:SimpleStackPanel Margin="10" Spacing="10">
            <hc:SimpleStackPanel Spacing="5">
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}"/>
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}" Style="{StaticResource ButtonPrimary}"/>
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}" Style="{StaticResource ButtonWarning}"/>
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}" Style="{StaticResource ButtonDanger}"/>
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}" Style="{StaticResource ButtonInfo}"/>
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}" Style="{StaticResource ButtonSuccess}"/>
            </hc:SimpleStackPanel>
            <hc:SimpleStackPanel Orientation="Horizontal" Spacing="5">
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}"/>
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}" Style="{StaticResource ButtonPrimary}"/>
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}" Style="{StaticResource ButtonWarning}"/>
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}" Style="{StaticResource ButtonDanger}"/>
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}" Style="{StaticResource ButtonInfo}"/>
                <Button Content="{ex:Lang Key={x:Static langs:LangKeys.Default}}" Style="{StaticResource ButtonSuccess}"/>
            </hc:SimpleStackPanel>
        </hc:SimpleStackPanel>
    </hc:TransitioningContentControl>
</UserControl>
