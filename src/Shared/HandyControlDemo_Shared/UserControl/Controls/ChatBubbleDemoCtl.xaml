<UserControl x:Class="HandyControlDemo.UserControl.ChatBubbleDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:userControl="clr-namespace:HandyControlDemo.UserControl"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Background="{DynamicResource RegionBrush}">
    <hc:TransitioningContentControl>
        <StackPanel Orientation="Horizontal" Margin="32">
            <userControl:ChatBox>
                <userControl:ChatBox.Background>
                    <ImageBrush ImageSource="/HandyControlDemo;component/Resources/Img/Chat/chat_back1.jpg" Stretch="Uniform"/>
                </userControl:ChatBox.Background>
            </userControl:ChatBox>
            <userControl:ChatBox Margin="32,0,0,0">
                <userControl:ChatBox.Background>
                    <ImageBrush ImageSource="/HandyControlDemo;component/Resources/Img/Chat/chat_back2.jpg" Stretch="Uniform"/>
                </userControl:ChatBox.Background>
            </userControl:ChatBox>
        </StackPanel>
    </hc:TransitioningContentControl>
</UserControl>
