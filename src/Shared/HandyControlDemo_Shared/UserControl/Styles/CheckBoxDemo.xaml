<UserControl x:Class="HandyControlDemo.UserControl.CheckBoxDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:langs="clr-namespace:HandyControlDemo.Properties.Langs"
             xmlns:ex="clr-namespace:HandyControlDemo.Tools.Extension"
             Background="{DynamicResource RegionBrush}">
    <hc:TransitioningContentControl>
        <hc:UniformSpacingPanel Margin="32" Spacing="16" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <CheckBox Content="{ex:Lang Key={x:Static langs:LangKeys.CheckBox}}" IsChecked="True"/>
            <CheckBox Content="{ex:Lang Key={x:Static langs:LangKeys.CheckBox}}" IsChecked="True" IsEnabled="False"/>
            <CheckBox Content="{ex:Lang Key={x:Static langs:LangKeys.CheckBox}}"/>
            <CheckBox Content="{ex:Lang Key={x:Static langs:LangKeys.CheckBox}}" IsEnabled="False"/>
            <CheckBox Content="{ex:Lang Key={x:Static langs:LangKeys.CheckBox}}" IsChecked="{x:Null}"/>
            <CheckBox Content="{ex:Lang Key={x:Static langs:LangKeys.CheckBox}}" IsChecked="{x:Null}" IsEnabled="False"/>
        </hc:UniformSpacingPanel>
    </hc:TransitioningContentControl>
</UserControl>
