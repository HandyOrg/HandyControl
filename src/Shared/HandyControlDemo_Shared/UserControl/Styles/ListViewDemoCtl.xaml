<UserControl x:Class="HandyControlDemo.UserControl.ListViewDemoCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:langs="clr-namespace:HandyControlDemo.Properties.Langs" hc:DynamicLanguage.ResourceManager="{x:Static langs:Lang.ResourceManager}"
             Background="{DynamicResource RegionBrush}">
    <hc:TransitioningContentControl>
        <ListView ItemsSource="{Binding DataList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="80" Header="{hc:Loc Index}" DisplayMemberBinding="{Binding Index}"/>
                    <GridViewColumn Width="100" Header="{hc:Loc Name}" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Width="200" Header="{hc:Loc Remark}" DisplayMemberBinding="{Binding Remark}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </hc:TransitioningContentControl>
</UserControl>
